<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FFFFFF"
    android:backgroundTint="#DCB46E">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="45dp">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:srcCompat="@drawable/king" />

        <TextView
            android:id="@+id/script3"
            android:layout_width="match_parent"
            android:layout_height="234dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/line2"
            android:fontFamily="@font/malgunbd"
            android:gravity="center"
            android:text="대본"
            android:textColor="#000000"
            android:textSize="24sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="135dp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/line"
            android:text="빨간색 단어는 강조단어입니다. 세게 읽으세요. \n V표시에서 숨을 1.5초 쉬세요. \n 초록색 단어는 나열입니다. 천천히 읽으세요."
            android:textColor="#000000"
            android:fontFamily="@font/malgun" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="50dp"
                    android:layout_height="64dp"
                    android:layout_marginTop="50dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/img" />

                <TextView
                    android:id="@+id/audioRecordText"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginTop="70dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/malgunbd"
                    android:text="녹음중"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <ImageButton
                    android:id="@+id/audioRecordImageBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:layout_weight="1"
                    android:padding="16dp"
                    android:src="@drawable/ic_record" />

                <ImageView
                    android:id="@+id/next"
                    android:layout_width="50dp"
                    android:layout_height="69dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/img_1" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>